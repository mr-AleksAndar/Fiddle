<div class="user">
  <h1 class="user-name"><%= @user.name %></h1>
  <p class="user-email"><%= @user.email %></p>
  
  <div class="actions">
    <% if current_user == @user || current_user.admin? %>
      <%= link_to 'Edit', edit_user_path(@user), class: 'button edit' %> 
      <%= link_to 'Delete', @user, method: :delete, data: { confirm: "Are you sure you want to delete this account?" }, class: 'button delete' %> 
      <%= link_to 'Sign Out', session_path, method: :delete, class: 'signup-link' %>
    <% end %>
  </div>
</div>
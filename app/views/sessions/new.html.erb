<div class="form-container">
  <h1>Sign In</h1>
  <% if flash[:alert] %>
  <div class="flash alert">
    <%= flash[:alert] %>
  </div>
<% end %>
  <%= form_with url: session_path, local: true, data: { turbo: false } do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.submit "Sign In" %>
    </div>
  <% end %>

  <div class="signup-link">
    <%= link_to 'Sign Up', new_user_path, class: "signup-button" %>
  </div>
</div>
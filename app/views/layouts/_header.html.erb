<header>
  <div class="logo-container">
    <%= link_to image_tag("logo.svg", alt: "Logo"), root_path, class: "logo", data: { turbo: false } %>
    <div class="divider-line"></div>
    <div class="title">
      Scores
    </div>
    <% if current_user %>
    <div class="user-info">
      <%= link_to current_user.name, current_user %>
    </div>
    <div class="right-aligned">
      <%= link_to "Sign Out", session_path, method: :delete, class: "button", data: { confirm: 'Are you sure?' } %>
    </div>
    <% else %>
    <div class="right-aligned">
      <%= link_to "Sign In", new_session_path, class: "button sign-in" %>
    </div>
    <% end %>
  </div>
</header>
<% if current_user&.admin? %>
  <div id="admin_actions_<%= card.id %>">
    <%= link_to 'Delete', card_path(card), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-button' %>
    <% if card.visible? %>
      <%= link_to 'Hide', hide_scores_card_path(card), method: :patch, class: 'delete-button' %>
    <% else %>
      <%= link_to 'Reveal', reveal_scores_card_path(card), method: :patch, class: 'delete-button' %>
    <% end %>
  </div>
<% else %>
  <div id="admin_actions_<%= card.id %>"></div>
<% end %>
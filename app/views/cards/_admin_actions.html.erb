<% if current_user&.admin? %>
    <%= link_to 'Delete', card_path(card), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-button' %>
    <%= link_to card.visible ? "Hide Scores" : "Reveal Scores", 
                card.visible ? hide_scores_card_path(card) : reveal_scores_card_path(card), 
                method: :patch, 
                class: card.visible ? "hide-scores-button" : "delete-button" %>
<% end %>
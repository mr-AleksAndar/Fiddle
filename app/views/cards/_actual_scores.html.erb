<% if card %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Score</th>
      </tr>
    </thead>

    <tbody>
      <% card.scores.includes(:user).each do |score| %>
        <tr>
          <td><%= score.user.name %></td>
          <td>
            <%= score.score %>  
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-warning">
    Error: Card is nil.
  </div>
<% end %>
